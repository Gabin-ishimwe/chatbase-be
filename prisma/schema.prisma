generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName    String
  lastName     String
  email        String
  password     String
  credits      Int       @default(20)
  openaiKey    String?
  refreshToken String?
  chatBots     Chatbot[]
  // messages     Messages[]c

  @@unique(fields: [email], name: "user_identifier")
}

model Chatbot {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  chatbotId       String    @unique
  name            String?
  description     String?
  avatar          String    @default("https://res.cloudinary.com/dmepvxtwv/image/upload/v1682596041/avatar_image_iyomy2.png")
  fileUploads     String?
  messages        Message[]
  rateLimiting    Int?
  model           String?   @default("text-davinci-003")
  apiKey          String?
  botLink         String?
  embeddingCode   String?
  isPublic        Boolean   @default(false)
  usageCredits    Int       @default(30)
  chatbotInterface Interface?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  user            User      @relation(fields: [userId], references: [id])
  userId          String    @db.ObjectId @unique

  @@unique([name])
}

model ResetToken {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  userId   String   @db.ObjectId
  token    String
  createAt DateTime @default(now())

  @@unique([userId])
}

type Message {
  role     String
  message  String
  createAt DateTime @default(now())
}

type Interface {
  theme          String  @default("light")
  initialMessage String  @default("Hi! What can I help you with?")
  messageColor   String  @default("#3b82f6")
  displayName    String?
  chatbotProfile String?
}

