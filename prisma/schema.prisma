// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName String
  lastName  String
  email     String
  password  String
  credits   Int
  openaiKey String
  chatBots  Chatbot[]
}

model Chatbot {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  avatar        String
  systemPrompt  Messages[]
  response      Messages[]
  rateLimiting  Int
  model         String
  apiKey        String
  botLink       String
  embeddingCode String
  isPublic      Boolean
  usageCredits  Int
  createdAt     DateTime   @default(now())
  user          User       @relation(fields: [userId], references: [id])
  userId        String     @db.ObjectId
}

type Messages {
  message   String
  createdAt DateTime @default(now())
}
